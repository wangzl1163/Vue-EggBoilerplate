{
   "description": "包含前端静态页面和node.js代理",
   "scripts": {
      "install-all": "npm install && npm-run-all install:*",
      "install:client": "cd client && npm install",
      "install:egg": "cd server/eggjs && npm install",
      "dev:egg": "cd server/eggjs && npm run dev",
      "build:egg": "cd client && npm run build:egg",
      "build:nginx": "cd client && npm run build:nginx",
      "start:client": "cd client && npm run build",
      "start:egg": "cd server/eggjs && npm start",
      "start:egg:test": "cd server/eggjs && npm run start:test",
      "stop:egg": "cd server/eggjs && npm run stop",
      "pre-commit": "lint-staged"
   },
   "devDependencies": {
      "husky": "^6.0.0",
      "lint-staged": "^11.0.0",
      "npm-run-all": "^4.1.5"
   },
   "lint-staged": {
      "client/src/**": [
         "./client/node_modules/eslint/bin/eslint.js --fix"
      ],
      "server/eggjs/**": [
         "./server/eggjs/node_modules/eslint/bin/eslint.js --fix"
      ]
   },
   "engines": {
      "node": ">= 12.13.0",
      "npm": ">= 6.0.0"
   }
}
